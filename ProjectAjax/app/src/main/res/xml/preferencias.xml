<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        		  android:key="preferencias_principal">
    <PreferenceCategory android:title="Audio" >
    		
	    <CheckBoxPreference 
	        android:key="musica"
	        android:title="Reproducir música"
	        android:summary="Se reproduce música de fondo"
	        android:defaultValue="false" />
	    
	    <CheckBoxPreference 
	        android:key="sonidos"
	        android:title="Reproducir sonidos"
	        android:summary="Reproducción de sonidos"
	        android:defaultValue="true" />
    
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Estadisticas" >
    		
	    <CheckBoxPreference 
	        android:key="ranking"
	        android:title="Puntuaciones"
	        android:summary="¿Borrar puntuaciones?"
	        android:defaultValue="false" />
    
    </PreferenceCategory>
</PreferenceScreen>
